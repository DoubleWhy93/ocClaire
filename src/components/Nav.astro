---
const links = [
  { href: '/', label: '首页' },
  { href: '/worlds/', label: '世界' },
  { href: '/characters/', label: '角色' },
  { href: '/fiction/', label: '小说' },
  { href: '/playground/', label: '互动场' },
  { href: '/playground/game/', label: '游戏' },
];
const currentPath = Astro.url.pathname;
---

<nav class="sticky top-0 z-50 backdrop-blur-md bg-surface-900/80 border-b border-slate-800">
  <div class="max-w-6xl mx-auto px-4 h-16 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-accent-400 tracking-tight">原创角色展示</a>
    <ul class="flex gap-6">
      {links.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class:list={[
              'text-sm font-medium transition-colors hover:text-accent-400',
              currentPath === href ? 'text-accent-400' : 'text-slate-400',
            ]}
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
