---
interface Props {
  id: string;
  novelTitle: string;
  synopsis: string;
  world: string;
  status: string;
  cover?: string;
}

const { id, novelTitle, synopsis, world, status, cover } = Astro.props;
const novelId = id.replace(/\/_meta$/, '');

const statusColors: Record<string, string> = {
  ongoing: 'text-green-400',
  completed: 'text-blue-400',
  hiatus: 'text-yellow-400',
};
---

<a href={`/fiction/${novelId}/`} class="block group card-hover">
  <div class="rounded-xl overflow-hidden bg-surface-800 border border-slate-700/50">
    <div class="aspect-[2/3] bg-surface-700 relative overflow-hidden">
      {cover ? (
        <img src={cover} alt={novelTitle} class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-4xl text-slate-600">
          &#x1D4D5;
        </div>
      )}
      <div class="absolute inset-0 bg-gradient-to-t from-surface-800/90 via-transparent to-transparent" />
    </div>
    <div class="p-4">
      <div class="flex items-center gap-2 text-xs">
        <span class={statusColors[status] || 'text-slate-400'}>{status}</span>
        <span class="text-slate-600">&middot;</span>
        <span class="text-slate-500">{world}</span>
      </div>
      <h3 class="text-lg font-bold text-slate-100 mt-1 group-hover:text-accent-400 transition-colors">{novelTitle}</h3>
      <p class="text-sm text-slate-400 mt-1 line-clamp-2">{synopsis}</p>
    </div>
  </div>
</a>
