---
import BaseLayout from '../../layouts/BaseLayout.astro';
import WorldCard from '../../components/WorldCard.astro';
import { getCollection } from 'astro:content';

const worlds = (await getCollection('worlds')).sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title="Worlds â€” OC Showcase">
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold text-slate-100 mb-2">Worlds</h1>
    <p class="text-slate-400 mb-8">Every story begins with a world.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {worlds.map((world) => (
        <WorldCard
          id={world.id}
          name={world.data.name}
          tagline={world.data.tagline}
          genre={world.data.genre}
          thumbnail={world.data.thumbnail}
        />
      ))}
    </div>
  </section>
</BaseLayout>
