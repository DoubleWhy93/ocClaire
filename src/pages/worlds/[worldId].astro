---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CharacterCard from '../../components/CharacterCard.astro';
import FictionCard from '../../components/FictionCard.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const worlds = await getCollection('worlds');
  return worlds.map((world) => ({
    params: { worldId: world.id },
    props: { world },
  }));
}

const { world } = Astro.props;
const { Content } = await render(world);

const allCharacters = await getCollection('characters');
const characters = allCharacters
  .filter((c) => c.data.world === world.id)
  .sort((a, b) => a.data.order - b.data.order);

const allFiction = await getCollection('fiction');
const novels = allFiction
  .filter((f) => f.data.type === 'novel-meta' && f.data.world === world.id)
  .sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout title={`${world.data.name} — OC Showcase`} description={world.data.tagline}>
  <!-- Banner -->
  <div class="relative h-64 md:h-80 bg-surface-800 overflow-hidden">
    {world.data.banner ? (
      <img src={world.data.banner} alt={world.data.name} class="w-full h-full object-cover opacity-60" />
    ) : (
      <div class="w-full h-full bg-gradient-to-br from-accent-600/20 to-purple-600/20" />
    )}
    <div class="absolute inset-0 bg-gradient-to-t from-surface-900 via-surface-900/50 to-transparent" />
    <div class="absolute bottom-0 left-0 right-0 p-8 max-w-6xl mx-auto">
      <span class="text-xs font-medium text-accent-400 uppercase tracking-wider">{world.data.genre}</span>
      <h1 class="text-4xl md:text-5xl font-bold text-white mt-1">{world.data.name}</h1>
      <p class="text-lg text-slate-300 mt-2">{world.data.tagline}</p>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Themes -->
    {world.data.themes.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-8">
        {world.data.themes.map((theme: string) => (
          <span class="px-3 py-1 text-xs rounded-full bg-surface-800 text-slate-400 border border-slate-700">
            {theme}
          </span>
        ))}
      </div>
    )}

    <!-- World description (rendered markdown) -->
    <div class="prose-fiction mb-16">
      <Content />
    </div>

    <!-- Characters -->
    {characters.length > 0 && (
      <section class="mb-16">
        <h2 class="text-2xl font-bold text-slate-100 mb-6">角色</h2>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {characters.map((char) => (
            <CharacterCard
              id={char.id}
              name={char.data.name}
              title={char.data.title}
              world={world.data.name}
              portrait={char.data.portrait}
              species={char.data.species}
            />
          ))}
        </div>
      </section>
    )}

    <!-- Fiction -->
    {novels.length > 0 && (
      <section>
        <h2 class="text-2xl font-bold text-slate-100 mb-6">故事</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {novels.map((novel) => {
            if (novel.data.type !== 'novel-meta') return null;
            return (
              <FictionCard
                id={novel.id}
                novelTitle={novel.data.novelTitle}
                synopsis={novel.data.synopsis}
                world={world.data.name}
                status={novel.data.status}
                cover={novel.data.cover}
              />
            );
          })}
        </div>
      </section>
    )}
  </div>
</BaseLayout>
